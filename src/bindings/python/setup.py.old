from distutils.core import setup, Extension
import numpy.distutils.misc_util

_hungarian = Extension('_hungarian',
                    include_dirs=['../../libhungarian']+numpy.distutils.misc_util.get_numpy_include_dirs(),
                    libraries = ['hungarian'],
                    library_dirs = ['../../build/libhungarian'],
                    sources = ['_hungarian.c'])


setup(
    name='libhungarian',
    version='0.01',
    description='Implementation of the Hungarian algorithm for weighted bipartite graph matching.',
    author='Rann Bar-On',
    url='https://github.com/rannbaron/libhungarian',
    ext_modules = [_hungarian]
)

